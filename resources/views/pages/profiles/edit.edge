@layout()
  <div class="flex flex-col items-center">
    <h1>
      Edit Your Profile
    </h1>

    @card({ class: 'max-w-md' })

      <form
        method="post"
        action="{{ route('profiles.update', {}, { qs: { _method: 'PUT'} }) }}"
        class="flex flex-col gap-4"
      >
        {{ csrfField() }}
        @error('form')
          <p role="alert" class="text-red-500 bg-red-50 p-3 rounded text-xs">
            {{ $message }}
          </p>
        @end

        @!form.input({
          label: 'Full Name',
          name: 'fullName',
          value: auth.user.fullName
        })

        @!form.input({
          label: 'Biography',
          name: 'description',
          type: 'textarea',
          value: profile.description
        })

        @button({ type: 'submit' })
          Update Profile
        @end
      </form>
    @end
  </div>
@end
