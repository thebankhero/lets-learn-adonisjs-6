@layout()
  <div class="flex flex-col items-center">
    <h1>
      Register
    </h1>

    @card({ class: 'max-w-md' })

      <form method="post" action="{{ route('auth.register.store') }}" class="flex flex-col gap-4">
        {{ csrfField() }}
        @!form.input({
          label: 'Full Name',
          name: 'fullName'
        })

        @!form.input({
          label: 'Email',
          name: 'email',
          type: 'email'
        })

        @!form.input({
          label: 'Password',
          name: 'password',
          type: 'password'
        })

        @button({ type: 'submit' })
          Register
        @end
      </form>
    @end
  </div>
@end
